{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "mabe:magiactor_sniffer",
      "is_spawnable": false,
      "is_summonable": true
    },

    "component_groups": {
      "mabe:apoptosis": {
          "minecraft:instant_despawn": {}
      }
    },
    "components": {
      "minecraft:collision_box": {
        "width": 3,
        "height": 2
      }
    },
    "events": {
      "mabe:apoptosis": {
        "add": {
          "component_groups": [
            "mabe:apoptosis"
          ]
        }
      },
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "run_command": {
              "command": [
                "effect @s invisibility 1 1 true",
                "execute if entity @p[family=ender_dragon_slayer] run summon sniffer",
                "event entity @s mabe:apoptosis"
              ]
            }
          }
        ]
      }
    }
  }
}
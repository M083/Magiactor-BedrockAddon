{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "mabe:lavasta",
      "is_spawnable": true,
      "is_summonable": true
    },

    "component_groups": {
      "status_easy": {
        "minecraft:health": {
          "value": 30,
          "max": 30
        }
      },
      "status_hard": {
        "minecraft:health": {
          "value": 60,
          "max": 60
        }
      },
      "mabe:lavasta_angry": {
        "minecraft:angry": {
          "duration": 30,
          "broadcast_anger": true,
          "broadcast_range": 32,
          "broadcast_targets": [
            "lavasta"
          ],
          "calm_event": {
            "event": "minecraft:on_calm",
            "target": "self"
          }
        }
      }
    },

    "components": {
      "minecraft:lava_movement": {
        "value": 0.5
      },
      "minecraft:on_target_acquired": {
        "event": "minecraft:become_angry",
        "target": "self"
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:navigation.walk": {
        "can_path_over_lava": true,
        "avoid_water": true,
        "can_sink": false,
        "can_walk_in_lava": true
      },
      "minecraft:behavior.rise_to_liquid_level": {
        "priority": 0,
        "liquid_y_offset": 0.05,
        "rise_delta": 0.01,
        "sink_delta": 0.01
      },
      "minecraft:behavior.move_to_liquid": {
        "priority": 2,
        "search_range": 16,
        "search_height": 10,
        "goal_radius": 0.9,
        "material_type": "Lava",
        "search_count": 30
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/lavasta.json"
      },
      "minecraft:fire_immune": {
      },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 9 : 0"
      },
      "minecraft:breathable": {
        "totalSupply": 15,
        "suffocateTime": 0,
        "breathesWater": true
      },
      "minecraft:collision_box": {
        "width": 1.85,
        "height": 1.25
      },
      "minecraft:nameable": {
      },

      "minecraft:type_family": {
        "family": [ "lavasta", "monster", "arthropod" ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/lavasta.json"
      },

      "minecraft:health": {
        "value": 45,
        "max": 45
      },
      "minecraft:shooter": {
        "def": "minecraft:arrow"
      },
      "minecraft:behavior.ranged_attack": {
        "priority": 3,
        "attack_radius": 24,
        "charge_shoot_trigger": 2.25,
        "charge_charged_trigger": 2.6,
        "burst_shots": 4,
        "burst_interval": 0.2
      },
      "minecraft:behavior.avoid_mob_type": {
        "priority": 1,
        "entity_types":{
          "filters": {
            "any_of": [
              { "test": "is_family", "subject": "other", "operator": "!=", "value": "lavasta" }
            ]
          },
          "max_dist": 8,
          "walk_speed_multiplier": 1.25,
          "sprint_speed_multiplier": 1.25
        }
      },
      "minecraft:movement.basic": {
      },
      "minecraft:movement": {
        "value": 0.25
      },
      "minecraft:underwater_movement": {
        "value": 0.3
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },

      "minecraft:behavior.random_stroll": {
        "priority": 4,
        "speed_multiplier": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 6,
        "look_distance": 6,
        "probability": 0.02
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "any_of": [
                  {"test": "has_damage", "value": "entity_explosion"},
                  {"test": "has_damage", "value": "block_explosion"}
                ]
              }
            },
            "deals_damage": false,
            "on_damage_sound_event": "break"
          }
        ]
      },
      "minecraft:behavior.hurt_by_target": {
        "entity_types": [
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "!=",
                  "value": "snow_storm"
                }
              ]
            }
          }
        ]
      },
      "minecraft:physics": {}
    },
    "events": {
      "minecraft:become_angry": {
        "add": {
          "component_groups": [
            "mabe:lavasta_angry"
          ]
        }
      },
      "minecraft:on_calm": {
        "remove": {
          "component_groups": [
            "mabe:lavasta_angry"
          ]
        }
      },
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "filters": { "test": "is_difficulty", "value": "easy" },
            "add": {
              "component_groups": [
                "status_easy"
              ]
            }
          },
          {
            "filters": { "test": "is_difficulty", "value": "hard" },
            "add": {
              "component_groups": [
                "status_hard"
              ]
            }
          }
        ]
      }
    }
  }
}

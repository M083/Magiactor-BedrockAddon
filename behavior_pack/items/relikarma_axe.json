{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "mabe:relikarma_axe",
      "category": "Equipment"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.sword"
      },
      "minecraft:icon": {
        "texture": "relikarma_axe"
      },
      "minecraft:can_destroy_in_creative": false,
      "minecraft:max_stack_size": 1,
      "minecraft:hand_equipped": true,
      "minecraft:durability": {
        "max_durability": 1280
      },
      "minecraft:enchantable":{
        "value": 10,
        "slot": "sword"
      },
      "minecraft:repairable": {
        "repair_items": [
          {
            "items": [ "minecraft:exposed_copper" ],
            "repair_amount": 400
          },
          {
            "items": [ "minecraft:deepslate_bricks" ],
            "repair_amount": 400
          },
          {
            "items": [ "mabe:replikar_heart" ],
            "repair_amount": 800
          },
          {
            "items": [ "mabe:relikarma_axe" ],
            "repair_amount": "query.remaining_durability * 1.1"
          }
        ]
      },
      "minecraft:damage": 22,
      "minecraft:weapon": {
        "on_hurt_entity": {
          "event": "mabe:attacked",
          "target": "self"
        }
      },
      "minecraft:cooldown": {
        "category": "sword",
        "duration": 10
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "mabe:rotate_attack"
        }
      }
    },
    "events": {
      "mabe:attacked": {
        "sequence": [
          {
            "damage": {
              "type": "void",
              "amount": 1
            }
          },
          {
            "add_mob_effect": {
              "effect": "weakness",
              "amplifier": 4,
              "duration": 8
            }
          }
        ]
      },
      "mabe:rotate_attack": {
        "sequence": [
          {
            "swing": {}
          },
          {
            "remove_mob_effect": {
              "effect": "weakness"
            }
          },
          {
            "damage": {
              "type": "void",
              "amount": 3
            }
          },
          {
            "run_command": {
              "command": [
                "playanimation @s animation.attack_animation.sword_rotate",
                "damage @e[type=!player,family=!inanimate,type=!mabe:griffonis,type=!item,r=6] 22 entity_attack entity @s",
                "playsound item.trident.throw @e[type=player] ~ ~ ~ 5 0.6"
              ]
            }
          }
        ]
      }
    }
  }
}
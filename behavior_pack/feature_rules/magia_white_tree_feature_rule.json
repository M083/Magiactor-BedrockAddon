{
	"format_version": "1.13.0",

	"minecraft:feature_rules": {
		"description": {
			"identifier": "mabe:magia_white_tree_feature_rule",
			"places_feature": "mabe:magia_white_tree_feature"
		},

		"conditions": {
			"placement_pass": "final_pass",

			"minecraft:biome_filter": {
				"all_of": [
					{
						"test": "has_biome_tag",
						"operator": "!=",
						"value": "nether"
					},
					{
						"test": "has_biome_tag",
						"operator": "!=",
						"value": "the_end"
					}
				]
			}
		},

		"distribution": {
			"iterations": 1,
            "scatter_chance": 1.0,
			"x": {
                "distribution": "uniform",
                "extent": [
                    0,
                    16
                ]
			},
			"z": {
                "distribution": "uniform",
                "extent": [
                    0,
                    16
                ]
			},
			"y": {
				"distribution": "uniform",
				"extent": [
					"q.noise(v.worldx / 1024, v.worldz / 1024) + q.noise(v.worldx, v.worldz) * 0.05 > 0.35 ? query.above_top_solid(variable.worldx, variable.worldz) : -9999",
					"q.noise(v.worldx / 1024, v.worldz / 1024) + q.noise(v.worldx, v.worldz) * 0.05 > 0.35 ? query.above_top_solid(variable.worldx, variable.worldz) : -9999"
				]
			}
		}
	}
}